generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model accounts {
  id         Int       @id @default(autoincrement())
  user_id    Int
  email      String    @unique @db.VarChar(255)
  password   String?   @db.VarChar(255)
  login_type String    @default("email") @db.VarChar(50)
  is_active  Boolean?  @default(true)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tokens     tokens[]
}

model users {
  id         Int        @id @default(autoincrement())
  fullname   String?    @db.VarChar(100)
  phone      String?    @db.VarChar(20)
  avatar     String?
  created_at DateTime?  @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  accounts   accounts[]
  bookings   bookings[]
}

model tokens {
  id         Int       @id @default(autoincrement())
  account_id Int
  type       String    @db.VarChar(50)
  token      String    @unique
  expired_at DateTime?
  created_at DateTime  @default(now())
  account    accounts  @relation(fields: [account_id], references: [id], onDelete: Cascade)
}

model movies {
  id            Int         @id @default(autoincrement())
  title         String      @db.VarChar(255)
  description   String?
  cover_image   String?
  detail_images Json?
  genres        Json?
  rating        Decimal?    @db.Decimal(3, 1)
  duration_min  Int?
  price         Decimal     @db.Decimal(10, 2)
  created_at    DateTime    @default(now())
  updated_at    DateTime    @default(now())
  is_active     Boolean?    @default(true)
  release_date  DateTime?
  showtimes     showtimes[]
}

model showtimes {
  id         Int        @id @default(autoincrement())
  movie_id   Int
  start_time DateTime
  price      Decimal    @db.Decimal(10, 2)
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  total_sold Int        @default(0)
  bookings   bookings[]
  movie      movies     @relation(fields: [movie_id], references: [id], onDelete: Cascade)
}

model bookings {
  id             Int       @id @default(autoincrement())
  user_id        Int
  showtime_id    Int
  ticket_count   Int       @default(1)
  total_price    Decimal   @db.Decimal(10, 2)
  created_at     DateTime  @default(now())
  paid_at        DateTime?
  payment_method String?   @default("cash") @db.VarChar(50)
  payment_status String?   @default("pending") @db.VarChar(50)
  transaction_id String?   @db.VarChar(255)
  updated_at     DateTime  @default(now())
  showtime       showtimes @relation(fields: [showtime_id], references: [id], onDelete: Cascade)
  user           users     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
